  <script>
    const 규정 = {
      "청소년보호법": {
        "청소년": { 기준: "연나이", 최대: 19 }
      },
      "식품위생법": {
        "청소년": { 기준: "연나이", 최대: 19 }
      },
      "음악산업진흥에관한법률": {
        "청소년": { 기준: "연나이", 최대: 19 }
      },
      "게임산업진흥에관한법률": {
        "청소년": { 기준: "연나이", 최대: 19 }
      },
      "아동청소년의 성보호에관한법률": {
        "아동ㆍ청소년": { 기준: "만나이", 최대: 19 }
      },
      "공중위생관리법": {
        "청소년": { 기준: "연나이", 최대: 19 }
      },
      "공연법": {
        "청소년": { 기준: "연나이", 최대: 19 }
      },
      "영화비디오물진흥법": {
        "청소년": { 기준: "연나이", 최대: 19 }
      },
      "근로기준법": {
        "연소자": { 기준: "만나이", 최대: 18 }
      },
      "실종아동등의 보호 및 지원에 관한 법률": {
        "아동등": { 기준: "만나이", 최대: 18 }
      },
      "청소년기본법": {
        "청소년": { 기준: "만나이범위", 최소: 9, 최대: 24 }
      },
      "민법": {
        "미성년자": { 기준: "만나이", 최대: 19 }
      },
      "아동복지법": {
        "아동": { 기준: "만나이", 최대: 18 }
      },
      "형법": {
        "미성년자": { 기준: "만나이", 최대: 13 },
        "형사미성년자": { 기준: "만나이", 최대: 14 }
      },
      "도로교통법": {
